        // DEƒûƒ∞≈ûKENLER
        let currentEditingId = null;
        let currentViewingUserId = null;
        let videoPlayer = null;
        let hls = null;
        let currentStreamUrl = "";
        let isPlaying = false;
        let playbackSpeed = 1;
        let isRepeating = false;
        let favorites = new Set();

        // SAYFA Y√úKLENDƒ∞ƒûƒ∞NDE
        document.addEventListener('DOMContentLoaded', function() {
            // Sayfalarƒ± y√ºkle
            loadHomePage();
            setupEventListeners();
            initializeVideoPlayer();
            
            // ƒ∞lk kanalƒ± se√ß
            if (appData.channels.length > 0) {
                selectChannel(appData.channels[0]);
            }
            
            // ƒ∞statistikleri g√ºncelle
            updateStats();
            
            // Ba≈ülangƒ±√ß bildirimi
            setTimeout(() => {
                showNotification('Canlƒ± TV Pro hazƒ±r! Kanal se√ßerek izlemeye ba≈ülayƒ±n.', 'info');
            }, 1500);
        });

        // Vƒ∞DEO PLAYER'I BA≈ûLAT
        function initializeVideoPlayer() {
            // Video.js Player'ƒ± ba≈ülat
            videoPlayer = videojs('myVideo', {
                controls: true,
                autoplay: false,
                preload: 'auto',
                fluid: true,
                responsive: true,
                playbackRates: [0.5, 0.75, 1, 1.25, 1.5, 2],
                controlBar: {
                    children: [
                        'playToggle',
                        'volumePanel',
                        'currentTimeDisplay',
                        'timeDivider',
                        'durationDisplay',
                        'progressControl',
                        'remainingTimeDisplay',
                        'playbackRateMenuButton',
                        'fullscreenToggle'
                    ]
                },
                html5: {
                    hlsjs: {
                        enableWorker: true,
                        debug: false,
                        liveSyncDurationCount: 3
                    }
                }
            });
            
            // Player olaylarƒ±nƒ± dinle
            videoPlayer.on('play', function() {
                isPlaying = true;
                document.getElementById('playPauseBtn').innerHTML = '<span>‚è∏Ô∏è</span> Duraklat';
                updateStreamStatus('Yayƒ±n oynatƒ±lƒ±yor', 'success');
                document.getElementById('streamResolution').textContent = getCurrentResolution();
            });
            
            videoPlayer.on('pause', function() {
                isPlaying = false;
                document.getElementById('playPauseBtn').innerHTML = '<span>‚ñ∂Ô∏è</span> Oynat';
                updateStreamStatus('Yayƒ±n duraklatƒ±ldƒ±', 'info');
            });
            
            videoPlayer.on('ended', function() {
                isPlaying = false;
                document.getElementById('playPauseBtn').innerHTML = '<span>‚ñ∂Ô∏è</span> Oynat';
                updateStreamStatus('Yayƒ±n sona erdi', 'info');
                
                if (isRepeating) {
                    setTimeout(() => {
                        videoPlayer.currentTime(0);
                        videoPlayer.play();
                        showNotification('Tekrarlanƒ±yor...', 'info');
                    }, 1000);
                }
            });
            
            videoPlayer.on('error', function() {
                updateStreamStatus('Yayƒ±n hatasƒ±', 'error');
                showErrorMessage('Video y√ºklenirken bir hata olu≈ütu. L√ºtfen baƒülantƒ±nƒ±zƒ± kontrol edin.');
            });
            
            videoPlayer.on('timeupdate', updateTimeDisplay);
            videoPlayer.on('loadedmetadata', updateDurationDisplay);
            videoPlayer.on('volumechange', updateVolumeDisplay);
            videoPlayer.on('fullscreenchange', handleFullscreenChange);
            videoPlayer.on('loadeddata', function() {
                document.getElementById('streamResolution').textContent = getCurrentResolution();
            });
            
            // HLS desteƒüi kontrol√º
            if (Hls.isSupported()) {
                console.log('üéØ HLS desteƒüi mevcut');
            } else if (videoPlayer.canPlayType('application/vnd.apple.mpegurl')) {
                console.log('üéØ Safari HLS desteƒüi mevcut');
            } else {
                console.log('‚ö†Ô∏è HLS desteƒüi yok');
                showNotification('Tarayƒ±cƒ±nƒ±z HLS formatƒ±nƒ± desteklemiyor olabilir. L√ºtfen g√ºncel bir tarayƒ±cƒ± kullanƒ±n.', 'info');
            }
        }

        // MEVCUT √á√ñZ√úN√úRL√úƒû√ú AL
        function getCurrentResolution() {
            if (!videoPlayer) return 'Auto';
            
            const videoElement = document.getElementById('myVideo_html5_api');
            if (!videoElement || !videoElement.videoWidth) return 'Auto';
            
            const height = videoElement.videoHeight;
            
            if (height >= 1080) return '1080p';
            if (height >= 720) return '720p';
            if (height >= 480) return '480p';
            if (height >= 360) return '360p';
            
            return 'Auto';
        }

        // YAYIN DURUMUNU G√úNCELLE
        function updateStreamStatus(status, type = 'info') {
            const statusElement = document.getElementById('streamStatus');
            statusElement.textContent = status;
            
            // Duruma g√∂re renk deƒüi≈ütir
            const colors = {
                'success': '#4cd964',
                'error': '#ff4757',
                'info': '#00a8ff',
                'warning': '#ff9500'
            };
            
            statusElement.style.color = colors[type] || '#8899aa';
            statusElement.style.fontWeight = '800';
            
            // ƒ∞kon ekle
            const icons = {
                'success': '‚úÖ',
                'error': '‚ùå',
                'info': '‚ÑπÔ∏è',
                'warning': '‚ö†Ô∏è'
            };
            
            statusElement.innerHTML = `${icons[type] || 'üì∂'} ${status}`;
        }

        // HATA MESAJI G√ñSTER
        function showErrorMessage(message) {
            const playerElement = document.getElementById('videoPlayer');
            let errorDiv = playerElement.querySelector('.error-message');
            
            if (!errorDiv) {
                errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.style.cssText = `
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    background: linear-gradient(135deg, rgba(255, 71, 87, 0.95), rgba(255, 71, 87, 0.85));
                    color: white;
                    padding: 25px;
                    border-radius: 15px;
                    text-align: center;
                    z-index: 100;
                    backdrop-filter: blur(15px);
                    border: 2px solid rgba(255, 255, 255, 0.2);
                    max-width: 85%;
                    box-shadow: 0 15px 35px rgba(255, 71, 87, 0.3);
                `;
                playerElement.appendChild(errorDiv);
            }
            
            errorDiv.innerHTML = `
                <div style="font-size: 40px; margin-bottom: 20px;">‚ö†Ô∏è</div>
                <div style="font-size: 18px; margin-bottom: 20px; font-weight: 800;">${message}</div>
                <button onclick="this.parentElement.remove()" 
                        style="background: white; color: #ff4757; border: none; padding: 12px 28px; border-radius: 10px; cursor: pointer; font-weight: 800; font-size: 15px; transition: all 0.3s ease;">
                    Tamam
                </button>
            `;
            
            errorDiv.querySelector('button').addEventListener('mouseover', function() {
                this.style.transform = 'translateY(-2px)';
                this.style.boxShadow = '0 5px 15px rgba(255, 255, 255, 0.3)';
            });
            
            errorDiv.querySelector('button').addEventListener('mouseout', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = 'none';
            });
        }

        // ZAMAN G√ñSTERƒ∞Mƒ∞Nƒ∞ G√úNCELLE
        function updateTimeDisplay() {
            if (videoPlayer && !isNaN(videoPlayer.currentTime())) {
                const currentTime = videoPlayer.currentTime();
                const formattedTime = formatTime(currentTime);
                document.getElementById('currentTime').textContent = formattedTime;
            }
        }

        // S√úRE G√ñSTERƒ∞Mƒ∞Nƒ∞ G√úNCELLE
        function updateDurationDisplay() {
            if (videoPlayer && !isNaN(videoPlayer.duration())) {
                const duration = videoPlayer.duration();
                const formattedDuration = formatTime(duration);
                document.getElementById('duration').textContent = formattedDuration;
            }
        }

        // SES G√ñSTERƒ∞Mƒ∞Nƒ∞ G√úNCELLE
        function updateVolumeDisplay() {
            if (videoPlayer) {
                const volume = videoPlayer.volume();
                document.getElementById('volumeSlider').value = volume;
                const icon = videoPlayer.muted() || volume === 0 ? 'üîá' : volume < 0.5 ? 'üîâ' : 'üîä';
                document.getElementById('muteBtn').innerHTML = `<span>${icon}</span> ${videoPlayer.muted() ? 'Ses A√ß' : 'Ses Kapat'}`;
            }
        }

        // TAM EKRAN DEƒûƒ∞≈ûƒ∞Mƒ∞
        function handleFullscreenChange() {
            const btn = document.getElementById('fullscreenBtn');
            if (videoPlayer.isFullscreen()) {
                btn.innerHTML = '<span>‚õ∂</span> Tam Ekrandan √áƒ±k';
            } else {
                btn.innerHTML = '<span>‚õ∂</span> Tam Ekran';
            }
        }

        // ZAMANI FORMATLA
        function formatTime(seconds) {
            if (isNaN(seconds)) return '00:00';
            
            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            const secs = Math.floor(seconds % 60);
            
            if (hours > 0) {
                return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
            }
            return `${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        // KANAL YAYININI BA≈ûLAT
        function playChannelStream(channel) {
            if (!channel.url || channel.url.trim() === '') {
                showErrorMessage('Bu kanal i√ßin ge√ßerli bir stream URL bulunamadƒ±.');
                showNotification('Stream URL bulunamadƒ±.', 'error');
                return;
            }
            
            currentStreamUrl = channel.url;
            
            // Stream tipini belirle
            const streamType = channel.type || 'hls';
            document.getElementById('streamFormat').textContent = streamType.toUpperCase();
            
            updateStreamStatus('Yayƒ±n baƒülanƒ±yor...', 'info');
            showLoader(true);
            
            try {
                // Eski HLS instance'ƒ±nƒ± temizle
                if (hls) {
                    hls.destroy();
                    hls = null;
                }
                
                const videoElement = document.getElementById('myVideo_html5_api');
                
                if (streamType === 'hls' && Hls.isSupported()) {
                    // HLS i√ßin
                    hls = new Hls({
                        enableWorker: true,
                        lowLatencyMode: true,
                        backBufferLength: 90,
                        debug: false,
                        maxBufferLength: 30,
                        maxBufferSize: 60 * 1000 * 1000
                    });
                    
                    hls.loadSource(channel.url);
                    hls.attachMedia(videoElement);
                    hls.on(Hls.Events.MANIFEST_PARSED, function() {
                        videoPlayer.play().catch(e => {
                            console.log('Autoplay prevented:', e);
                            showNotification('Oynatmak i√ßin play butonuna tƒ±klayƒ±n.', 'info');
                        });
                        updateStreamStatus('HLS yayƒ±nƒ± ba≈ülatƒ±lƒ±yor', 'success');
                        showLoader(false);
                        showNotification(`${channel.name} yayƒ±nƒ± ba≈ülatƒ±ldƒ±!`, 'success');
                        
                        // Kalite seviyelerini g√ºncelle
                        if (hls.levels && hls.levels.length > 0) {
                            const qualitySelect = document.getElementById('qualitySelect');
                            qualitySelect.innerHTML = '<option value="auto">üéØ Otomatik Kalite</option>';
                            hls.levels.forEach((level, index) => {
                                const option = document.createElement('option');
                                option.value = index;
                                option.textContent = `${level.height}p`;
                                qualitySelect.appendChild(option);
                            });
                        }
                    });
                    
                    hls.on(Hls.Events.ERROR, function(event, data) {
                        console.error('HLS hatasƒ±:', data);
                        showLoader(false);
                        if (data.fatal) {
                            switch(data.type) {
                                case Hls.ErrorTypes.NETWORK_ERROR:
                                    updateStreamStatus('Aƒü hatasƒ±', 'error');
                                    showErrorMessage('Aƒü baƒülantƒ± hatasƒ±. L√ºtfen baƒülantƒ±nƒ±zƒ± kontrol edin ve yeniden deneyin.');
                                    break;
                                case Hls.ErrorTypes.MEDIA_ERROR:
                                    updateStreamStatus('Medya hatasƒ±', 'error');
                                    showErrorMessage('Video y√ºklenirken hata olu≈ütu. L√ºtfen farklƒ± bir kanal deneyin.');
                                    break;
                                default:
                                    updateStreamStatus('Bilinmeyen hata', 'error');
                                    showErrorMessage('Yayƒ±n y√ºklenirken beklenmeyen bir hata olu≈ütu.');
                                    break;
                            }
                        }
                    });
                    
                } else if (streamType === 'mp4' || streamType === 'mpeg-dash') {
                    // MP4 veya DASH i√ßin
                    videoPlayer.src({ 
                        src: channel.url, 
                        type: streamType === 'mp4' ? 'video/mp4' : 'application/dash+xml' 
                    });
                    videoPlayer.load();
                    videoPlayer.play().catch(e => {
                        console.log('Autoplay prevented:', e);
                        showNotification('Oynatmak i√ßin play butonuna tƒ±klayƒ±n.', 'info');
                    });
                    updateStreamStatus('Yayƒ±n ba≈ülatƒ±lƒ±yor', 'success');
                    showLoader(false);
                    showNotification(`${channel.name} yayƒ±nƒ± ba≈ülatƒ±ldƒ±!`, 'success');
                    
                } else {
                    // Diƒüer formatlar i√ßin
                    videoPlayer.src(channel.url);
                    videoPlayer.load();
                    videoPlayer.play().catch(e => {
                        console.log('Autoplay prevented:', e);
                        showNotification('Oynatmak i√ßin play butonuna tƒ±klayƒ±n.', 'info');
                    });
                    updateStreamStatus('Yayƒ±n ba≈ülatƒ±lƒ±yor', 'success');
                    showLoader(false);
                    showNotification(`${channel.name} yayƒ±nƒ± ba≈ülatƒ±ldƒ±!`, 'success');
                }
                
                // Video ba≈üarƒ±yla y√ºklendi
                videoPlayer.ready(function() {
                    console.log('‚úÖ Video player hazƒ±r');
                });
                
            } catch (error) {
                console.error('‚ùå Stream ba≈ülatma hatasƒ±:', error);
                updateStreamStatus('Ba≈ülatma hatasƒ±', 'error');
                showErrorMessage('Yayƒ±n ba≈ülatƒ±lƒ±rken hata olu≈ütu: ' + error.message);
                showLoader(false);
                showNotification('Yayƒ±n ba≈ülatƒ±lamadƒ±. L√ºtfen tekrar deneyin.', 'error');
            }
        }

        // ANA SAYFA Y√úKLE
        function loadHomePage() {
            const container = document.getElementById('channelsContainer');
            if (!container) return;
            
            container.innerHTML = '';
            
            // Kanal sayƒ±sƒ±nƒ± g√∂ster
            document.getElementById('totalChannels').textContent = appData.channels.length;
            document.getElementById('lastUpdate').textContent = new Date().toLocaleString('tr-TR');
            
            // Demo kanallarƒ± ekle
            appData.channels.forEach(channel => {
                createChannelCard(channel, container);
            });
            
            // ƒ∞statistikleri g√ºncelle
            updateStats();
        }

        // KANAL KARTI OLU≈ûTUR
        function createChannelCard(channel, container) {
            const categoryName = getCategoryName(channel.category);
            const card = document.createElement('div');
            card.className = `channel-card ${channel.isLive ? 'live' : ''}`;
            card.dataset.category = channel.category;
            card.dataset.id = channel.id;
            
            // Kategori rengini al
            const category = appData.categories.find(c => c.key === channel.category);
            const categoryColor = category ? category.color : '#00a8ff';
            
            card.innerHTML = `
                <div class="channel-logo" style="background: linear-gradient(135deg, ${categoryColor}, ${darkenColor(categoryColor, 20)});">${channel.logo}</div>
                <div class="channel-name">${channel.name}</div>
                <div class="channel-category" style="background: ${categoryColor}20; color: ${categoryColor};">${categoryName}</div>
            `;
            
            // Kanal se√ßme
            card.onclick = () => {
                selectChannel(channel);
                scrollToPlayer();
            };
            
            container.appendChild(card);
        }

        // RENK KARARTMA FONKSƒ∞YONU
        function darkenColor(color, percent) {
            const num = parseInt(color.replace("#", ""), 16);
            const amt = Math.round(2.55 * percent);
            const R = (num >> 16) - amt;
            const G = (num >> 8 & 0x00FF) - amt;
            const B = (num & 0x0000FF) - amt;
            return "#" + (
                0x1000000 +
                (R < 255 ? R < 1 ? 0 : R : 255) * 0x10000 +
                (G < 255 ? G < 1 ? 0 : G : 255) * 0x100 +
                (B < 255 ? B < 1 ? 0 : B : 255)
            ).toString(16).slice(1);
        }

        // KATEGORƒ∞ ADINI AL
        function getCategoryName(key) {
            const cat = appData.categories.find(c => c.key === key);
            return cat ? cat.name : key;
        }

        // KANAL SE√á
        function selectChannel(channel) {
            const categoryName = getCategoryName(channel.category);
            
            // UI'ƒ± g√ºncelle
            document.getElementById('currentLogo').textContent = channel.logo;
            document.getElementById('currentChannel').textContent = channel.name;
            document.getElementById('currentCategory').textContent = categoryName;
            
            // Aktif kategoriyi g√ºncelle
            document.getElementById('activeCategory').textContent = categoryName;
            
            // Yayƒ±nƒ± ba≈ülat
            playChannelStream(channel);
            
            // Se√ßili kanalƒ± vurgula
            document.querySelectorAll('.channel-card').forEach(card => {
                card.style.borderColor = '#2a3444';
                card.style.boxShadow = '0 6px 20px rgba(0, 0, 0, 0.2)';
                card.style.transform = 'translateY(0)';
            });
            
            const selectedCard = document.querySelector(`.channel-card[data-id="${channel.id}"]`);
            if (selectedCard) {
                selectedCard.style.borderColor = '#00a8ff';
                selectedCard.style.boxShadow = '0 15px 35px rgba(0, 168, 255, 0.3)';
                selectedCard.style.transform = 'translateY(-8px)';
            }
        }

        // PLAYER'A KAYDIR
        function scrollToPlayer() {
            const player = document.querySelector('.media-player-container');
            if (player) {
                player.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center',
                    inline: 'nearest'
                });
                
                // Mobilde daha iyi g√∂r√ºn√ºm i√ßin ek padding
                if (window.innerWidth <= 768) {
                    setTimeout(() => {
                        window.scrollBy({ top: -50, behavior: 'smooth' });
                    }, 300);
                }
            }
        }

        // NOTIFICATION G√ñSTER
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            
            const icons = {
                'success': '‚úÖ',
                'error': '‚ùå',
                'info': '‚ÑπÔ∏è',
                'warning': '‚ö†Ô∏è'
            };
            
            notification.innerHTML = `
                <span style="font-size: 22px;">${icons[type] || 'üì¢'}</span>
                <div>${message}</div>
            `;
            
            document.body.appendChild(notification);
            
            // 4 saniye sonra kaldƒ±r
            setTimeout(() => {
                notification.style.animation = 'slideInRight 0.3s cubic-bezier(0.4, 0, 0.2, 1) reverse';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 4000);
        }

        // LOADER G√ñSTER/Gƒ∞ZLE
        function showLoader(show) {
            const loader = document.getElementById('loader');
            if (loader) {
                if (show) {
                    loader.style.display = 'flex';
                    loader.style.animation = 'fadeIn 0.3s ease-out';
                } else {
                    loader.style.animation = 'fadeIn 0.3s ease-out reverse';
                    setTimeout(() => {
                        loader.style.display = 'none';
                    }, 300);
                }
            }
        }

        // KATEGORƒ∞ Fƒ∞LTRELE
        function setupCategoryFilters() {
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.onclick = function() {
                    // T√ºm butonlardan active classƒ±nƒ± kaldƒ±r
                    document.querySelectorAll('.category-btn').forEach(b => {
                        b.classList.remove('active');
                    });
                    
                    // Tƒ±klanan butona active classƒ±nƒ± ekle
                    this.classList.add('active');
                    
                    const category = this.dataset.category;
                    filterChannels(category);
                    
                    // Aktif kategoriyi g√ºncelle
                    const categoryName = category === 'all' ? 'T√ºm Kanallar' : getCategoryName(category);
                    document.getElementById('activeCategory').textContent = categoryName;
                    
                    // Bildirim g√∂ster
                    if (category !== 'all') {
                        showNotification(`${categoryName} kanallarƒ± filtrelendi`, 'info');
                    }
                };
            });
        }

        function filterChannels(category) {
            const cards = document.querySelectorAll('.channel-card');
            let visibleCount = 0;
            
            cards.forEach(card => {
                if (category === 'all' || card.dataset.category === category) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });
            
            // G√∂r√ºnen kanal sayƒ±sƒ±nƒ± g√∂ster
            document.getElementById('totalChannels').textContent = visibleCount;
        }

        // MEDYA PLAYER KONTROLLERƒ∞
        function setupMediaPlayerControls() {
            // Oynat/Duraklat butonu
            document.getElementById('playPauseBtn').onclick = function() {
                if (videoPlayer.paused()) {
                    videoPlayer.play().catch(e => {
                        showNotification('Oynatƒ±lamƒ±yor. L√ºtfen baƒülantƒ±nƒ±zƒ± kontrol edin.', 'error');
                    });
                    this.innerHTML = '<span>‚è∏Ô∏è</span> Duraklat';
                } else {
                    videoPlayer.pause();
                    this.innerHTML = '<span>‚ñ∂Ô∏è</span> Oynat';
                }
            };
            
            // Dur butonu
            document.getElementById('stopBtn').onclick = function() {
                videoPlayer.pause();
                videoPlayer.currentTime(0);
                document.getElementById('playPauseBtn').innerHTML = '<span>‚ñ∂Ô∏è</span> Oynat';
                updateStreamStatus('Yayƒ±n durduruldu', 'info');
                showNotification('Yayƒ±n durduruldu', 'info');
            };
            
            // Ses a√ß/kapa butonu
            document.getElementById('muteBtn').onclick = function() {
                videoPlayer.muted(!videoPlayer.muted());
                if (videoPlayer.muted()) {
                    showNotification('Ses kapatƒ±ldƒ±', 'info');
                } else {
                    showNotification('Ses a√ßƒ±ldƒ±', 'info');
                }
            };
            
            // Ses kontrol√º
            document.getElementById('volumeSlider').oninput = function() {
                videoPlayer.volume(parseFloat(this.value));
                videoPlayer.muted(false);
            };
            
            // Tam ekran butonu
            document.getElementById('fullscreenBtn').onclick = function() {
                if (videoPlayer.isFullscreen()) {
                    videoPlayer.exitFullscreen();
                } else {
                    videoPlayer.requestFullscreen().catch(e => {
                        showNotification('Tam ekran modu desteklenmiyor', 'error');
                    });
                }
            };
            
            // Kalite se√ßici
            document.getElementById('qualitySelect').onchange = function() {
                const quality = this.value;
                if (quality === 'auto') {
                    if (hls) hls.currentLevel = -1;
                    showNotification('Kalite: Otomatik', 'info');
                } else {
                    if (hls) {
                        const level = parseInt(quality);
                        if (!isNaN(level) && level >= 0 && level < hls.levels.length) {
                            hls.currentLevel = level;
                            const qualityLabel = hls.levels[level].height + 'p';
                            showNotification(`Kalite: ${qualityLabel}`, 'info');
                            document.getElementById('streamResolution').textContent = qualityLabel;
                        }
                    }
                }
            };
            
            // IPTV √ñzellik butonlarƒ±
            document.getElementById('speedBtn').onclick = function() {
                const speeds = [0.5, 0.75, 1, 1.25, 1.5, 2];
                const currentIndex = speeds.indexOf(playbackSpeed);
                const nextIndex = (currentIndex + 1) % speeds.length;
                playbackSpeed = speeds[nextIndex];
                videoPlayer.playbackRate(playbackSpeed);
                this.innerHTML = `<span>‚ö°</span> Hƒ±z: ${playbackSpeed}x`;
                showNotification(`Oynatma hƒ±zƒ±: ${playbackSpeed}x`, 'info');
            };
            
            // Ekran g√∂r√ºnt√ºs√º butonu
            document.getElementById('snapshotBtn').onclick = function() {
                try {
                    const canvas = document.createElement('canvas');
                    const video = document.getElementById('myVideo_html5_api');
                    if (!video.videoWidth || !video.videoHeight) {
                        showNotification('Video hen√ºz y√ºklenmedi!', 'error');
                        return;
                    }
                    
                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    canvas.getContext('2d').drawImage(video, 0, 0, canvas.width, canvas.height);
                    
                    const link = document.createElement('a');
                    const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
                    link.download = `canli-tv-${timestamp}.png`;
                    link.href = canvas.toDataURL('image/png');
                    link.click();
                    
                    showNotification('Ekran g√∂r√ºnt√ºs√º kaydedildi!', 'success');
                } catch (error) {
                    console.error('Ekran g√∂r√ºnt√ºs√º hatasƒ±:', error);
                    showNotification('Ekran g√∂r√ºnt√ºs√º alƒ±namadƒ±!', 'error');
                }
            };
            
            // PIP modu butonu
            document.getElementById('pipBtn').onclick = function() {
                if (document.pictureInPictureElement) {
                    document.exitPictureInPicture();
                    showNotification('PIP modundan √ßƒ±kƒ±ldƒ±', 'info');
                } else if (document.pictureInPictureEnabled && videoPlayer.tech().el.requestPictureInPicture) {
                    videoPlayer.tech().el.requestPictureInPicture().catch(e => {
                        showNotification('PIP modu desteklenmiyor', 'error');
                    });
                    showNotification('PIP modu etkin', 'info');
                } else {
                    showNotification('PIP modu desteklenmiyor', 'error');
                }
            };
            
            // Tekrarla butonu
            document.getElementById('repeatBtn').onclick = function() {
                isRepeating = !isRepeating;
                this.innerHTML = isRepeating ? '<span>üîÅ</span> Tekrar: A√ßƒ±k' : '<span>üîÅ</span> Tekrar: Kapalƒ±';
                showNotification(isRepeating ? 'Tekrarlama a√ßƒ±ldƒ±' : 'Tekrarlama kapatƒ±ldƒ±', 'info');
            };
            
            // Favorilere ekle butonu
            document.getElementById('favoriteBtn').onclick = function() {
                const currentChannel = document.getElementById('currentChannel').textContent;
                if (currentChannel !== 'Kanal Se√ßin') {
                    const channel = appData.channels.find(c => c.name === currentChannel);
                    if (channel) {
                        if (favorites.has(channel.id)) {
                            favorites.delete(channel.id);
                            this.innerHTML = '<span>‚≠ê</span> Favorilere Ekle';
                            showNotification(`${channel.name} favorilerden √ßƒ±karƒ±ldƒ±`, 'info');
                        } else {
                            favorites.add(channel.id);
                            this.innerHTML = '<span>‚≠ê</span> Favori';
                            showNotification(`${channel.name} favorilere eklendi!`, 'success');
                        }
                    }
                }
            };
        }

        // ƒ∞STATƒ∞STƒ∞KLERƒ∞ G√úNCELLE
        function updateStats() {
            document.getElementById('statChannels').textContent = appData.channels.length;
            document.getElementById('statCategories').textContent = appData.categories.length;
            document.getElementById('statUsers').textContent = appData.users.length;
            
            // Canlƒ± izlenen kanal sayƒ±sƒ±
            const liveChannels = appData.channels.filter(c => c.isLive).length;
            document.getElementById('statLive').textContent = liveChannels;
        }

        // YARDIM MODALINI G√ñSTER
        function showHelpModal() {
            document.getElementById('helpModal').style.display = 'flex';
        }

        // YENƒ∞LE BUTONU
        function refreshApp() {
            showLoader(true);
            setTimeout(() => {
                loadHomePage();
                showLoader(false);
                showNotification('Uygulama yenilendi!', 'success');
            }, 800);
        }

        // OLAY Dƒ∞NLEYƒ∞Cƒ∞LERƒ∞
        function setupEventListeners() {
            // Ana sayfa kategori filtreleri
            setupCategoryFilters();
            
            // Medya player kontrolleri
            setupMediaPlayerControls();
            
            // Mobile menu
            document.getElementById('mobileMenuBtn').onclick = function() {
                const buttons = document.getElementById('headerButtons');
                buttons.classList.toggle('active');
                
                // Men√º dƒ±≈üƒ±na tƒ±klayƒ±nca kapat
                if (buttons.classList.contains('active')) {
                    const closeMenu = function(e) {
                        if (!buttons.contains(e.target) && e.target !== this) {
                            buttons.classList.remove('active');
                            document.removeEventListener('click', closeMenu);
                        }
                    };
                    setTimeout(() => {
                        document.addEventListener('click', closeMenu);
                    }, 100);
                }
            };
            
            // Yenile butonu
            document.getElementById('refreshBtn').onclick = refreshApp;
            
            // Yardƒ±m butonu
            document.getElementById('helpBtn').onclick = showHelpModal;
            
            // Admin giri≈ü butonu
            document.getElementById('adminBtn').onclick = function() {
                document.getElementById('loginModal').style.display = 'flex';
            };
            
            // Giri≈ü formu
            document.getElementById('loginForm').onsubmit = function(e) {
                e.preventDefault();
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;
                
                // Kullanƒ±cƒ± doƒürulama
                const user = appData.users.find(u => 
                    u.username === username && u.password === password
                );
                
                if (user) {
                    document.getElementById('loginModal').style.display = 'none';
                    document.getElementById('mainApp').style.display = 'none';
                    document.getElementById('adminPanel').style.display = 'block';
                    loadAdminPanel();
                    showNotification('Y√∂netici paneline ho≈ü geldiniz!', 'success');
                    
                    // Son giri≈ü zamanƒ±nƒ± g√ºncelle
                    user.lastLogin = new Date().toLocaleString('tr-TR');
                } else {
                    showNotification('Hatalƒ± giri≈ü! Demo: admin / admin123', 'error');
                }
            };
            
            // √áƒ±kƒ±≈ü butonu
            document.getElementById('adminLogout').onclick = function() {
                document.getElementById('adminPanel').style.display = 'none';
                document.getElementById('mainApp').style.display = 'block';
                showNotification('Ba≈üarƒ±yla √ßƒ±kƒ±≈ü yapƒ±ldƒ±.', 'info');
            };
            
            // Admin navigasyon
            document.querySelectorAll('.admin-nav button[data-section]').forEach(btn => {
                btn.onclick = function() {
                    // T√ºm butonlardan active classƒ±nƒ± kaldƒ±r
                    document.querySelectorAll('.admin-nav button').forEach(b => {
                        b.classList.remove('active');
                    });
                    
                    // Tƒ±klanan butona active classƒ±nƒ± ekle
                    this.classList.add('active');
                    
                    // T√ºm b√∂l√ºmleri gizle
                    document.querySelectorAll('.admin-section').forEach(section => {
                        section.classList.remove('active');
                    });
                    
                    // ƒ∞lgili b√∂l√ºm√º g√∂ster
                    const sectionId = this.dataset.section;
                    document.getElementById(sectionId).classList.add('active');
                };
            });
            
            // Hƒ±zlƒ± eri≈üim butonlarƒ±
            document.getElementById('quickAddChannel').onclick = function() {
                openChannelModal(false);
            };
            
            document.getElementById('quickAddCategory').onclick = function() {
                openCategoryModal();
            };
            
            document.getElementById('quickAddUser').onclick = function() {
                openUserModal(false);
            };
            
            // Kanal ekle butonu
            document.getElementById('addChannelBtn').onclick = function() {
                openChannelModal(false);
            };
            
            // Kategori ekle butonu
            document.getElementById('addCategoryBtn').onclick = function() {
                openCategoryModal();
            };
            
            // Kullanƒ±cƒ± ekle butonu
            document.getElementById('addUserBtn').onclick = function() {
                openUserModal(false);
            };
            
            // Modal kapatma butonlarƒ±
            document.getElementById('closeLogin').onclick = function() {
                document.getElementById('loginModal').style.display = 'none';
            };
            
            document.getElementById('closeChannelModal').onclick = function() {
                document.getElementById('channelModal').style.display = 'none';
                currentEditingId = null;
            };
            
            document.getElementById('closeCategoryModal').onclick = function() {
                document.getElementById('categoryModal').style.display = 'none';
            };
            
            document.getElementById('closeUserModal').onclick = function() {
                document.getElementById('userModal').style.display = 'none';
                currentEditingId = null;
            };
            
            document.getElementById('closeHelpModal').onclick = function() {
                document.getElementById('helpModal').style.display = 'none';
            };
            
            // Modal dƒ±≈üƒ±na tƒ±klayƒ±nca kapat
            document.querySelectorAll('.modal').forEach(modal => {
                modal.onclick = function(e) {
                    if (e.target === this) {
                        this.style.display = 'none';
                        currentEditingId = null;
                        currentViewingUserId = null;
                    }
                };
            });
            
            // ESC tu≈üu ile modal kapatma
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    document.querySelectorAll('.modal').forEach(modal => {
                        if (modal.style.display === 'flex') {
                            modal.style.display = 'none';
                        }
                    });
                }
            });
            
            // Sayfa g√∂r√ºn√ºrl√ºƒü√º deƒüi≈üikliƒüi
            document.addEventListener('visibilitychange', function() {
                if (document.hidden) {
                    // Sayfa gizlendiƒüinde video duraklat
                    if (videoPlayer && !videoPlayer.paused()) {
                        videoPlayer.pause();
                    }
                }
            });
        }

        // SAYFA KAPATMA UYARISI
        window.addEventListener('beforeunload', function(e) {
            if (videoPlayer && !videoPlayer.paused()) {
                // Tarayƒ±cƒ±ya baƒülƒ± olarak mesaj g√∂sterilebilir
                return null;
            }
        });

        // RESIZE EVENT - OPTƒ∞Mƒ∞ZE
        let resizeTimer;
        window.addEventListener('resize', function() {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(function() {
                // Video player'ƒ± yeniden boyutlandƒ±r
                if (videoPlayer) {
                    videoPlayer.trigger('resize');
                }
                
                // Mobil men√ºy√º kapat
                const mobileMenu = document.getElementById('headerButtons');
                if (window.innerWidth > 768 && mobileMenu.classList.contains('active')) {
                    mobileMenu.classList.remove('active');
                }
                
                // √á√∂z√ºn√ºrl√ºƒü√º g√ºncelle
                document.getElementById('streamResolution').textContent = getCurrentResolution();
            }, 250);
        });

        // TOUCH EVENT OPTIMIZATION
        document.addEventListener('touchstart', function() {}, { passive: true });
        document.addEventListener('touchmove', function() {}, { passive: true });
        
        // HIZLI KAYDIRMA DESTEƒûƒ∞
        let touchStartY = 0;
        document.addEventListener('touchstart', function(e) {
            touchStartY = e.touches[0].clientY;
        }, { passive: true });
        
        // ADMIN PANEL FONKSƒ∞YONLARI (√∂nceki versiyondan alƒ±ndƒ±)
        function loadAdminPanel() {
            // ... mevcut admin fonksiyonlarƒ± ...
        }
        
        function openChannelModal(isEdit = false, channelId = null) {
            currentEditingId = channelId;
            
            // Kategori se√ßeneklerini doldur
            const select = document.getElementById('channelCategory');
            select.innerHTML = '<option value="">Kategori Se√ßin</option>';
            appData.categories.forEach(category => {
                const option = document.createElement('option');
                option.value = category.key;
                option.textContent = category.name;
                select.appendChild(option);
            });
            
            if (isEdit && channelId) {
                const channel = appData.channels.find(c => c.id === channelId);
                if (channel) {
                    document.getElementById('channelModalTitle').textContent = 'Kanalƒ± D√ºzenle';
                    document.getElementById('channelName').value = channel.name;
                    document.getElementById('channelCategory').value = channel.category;
                    document.getElementById('channelLogo').value = channel.logo;
                    document.getElementById('streamUrlModal').value = channel.url || '';
                    document.getElementById('streamTypeModal').value = channel.type || 'hls';
                }
            } else {
                document.getElementById('channelModalTitle').textContent = 'Yeni Kanal Ekle';
                const form = document.getElementById('channelForm');
                if (form) form.reset();
                document.getElementById('streamTypeModal').value = 'hls';
            }
            
            document.getElementById('channelModal').style.display = 'flex';
        }
    </script>
</body>
</html>